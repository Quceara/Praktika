<Page x:Class="PraKtika.Views.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PraKtika.Views"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="Page4">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock TextAlignment="Center" Text="Запишите изменения в текстовое поле ниже" Margin="0,10" Name="Textblock"></TextBlock>
            <TextBox Name="Text" TextAlignment="Center"></TextBox>
            <Button Content="Далее" Margin="0,10" Click="Button_Click"></Button>
        </StackPanel>
            
    </Grid>
</Page>
